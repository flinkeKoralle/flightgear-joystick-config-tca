<?xml version="1.0"?>

<PropertyList>
    <axis n="2">
        <desc type="string">Tiller</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/gear/tiller-cmd-norm</property>
            <factor type="double">1</factor>
            <offset type="double">0</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    <axis n="3">
        <desc type="string">Speedbrake</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/flight/speedbrake</property>
            <factor type="double">1</factor>
            <offset type="double">0</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    <button n="3">
        <desc type="string">Autopilot disconnect</desc>
        <binding>
            <command>property-assign</command>
            <property>instrumentation/afds/inputs/AP</property>
            <value>0</value>
        </binding>
        <repeatable type="double">0</repeatable>
    </button>
</PropertyList>

<?xml version="1.0"?>

<PropertyList>
    <axis n="2">
        <desc type="string">Tiller</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/gear/tiller-steer-deg</property>
            <factor type="double">80</factor>
            <offset type="double">0</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    <button n="3">
        <desc type="string">Autopilot disconnect</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">controls/autoflight/autopilot/engage</property>
            <value type="bool">false</value>
        </binding>
        <repeatable type="double">0</repeatable>
    </button>
</PropertyList>

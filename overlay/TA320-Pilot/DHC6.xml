<?xml version="1.0"?>
<PropertyList>
    <axis n="2">
        <desc type="string">Tiller</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/gear/tiller</property>
            <factor type="double">1</factor>
            <offset type="double">0</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    <axis n="3">
        <desc type="string">Prop Pitch</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/engines/propeller-pitch-all</property>
            <factor type="double">1</factor>
            <offset type="double">0</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    <button n="3">
        <desc>AP Disconnect</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/autopilot/settings/apflag</property>
            <value type="bool">true</value>
        </binding>
    </button>
</PropertyList>

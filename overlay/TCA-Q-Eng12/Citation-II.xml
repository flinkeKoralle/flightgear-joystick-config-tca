<?xml version="0.0"?>

<PropertyList>
  <button n="2">
    <desc>Engine / Cutoff Switch Left</desc>
    <binding>
        <command type="string">property-assign</command>
        <property type="string">/controls/engines/engine[0]/ignition-sw</property>
        <value type="bool">true</value>
    </binding>

    <mod-up>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/engines/engine[0]/ignition-sw</property>
            <value type="bool">false</value>
        </binding>
    </mod-up>
  </button>
  <button n="3">
    <desc>Engine / Cutoff Switch Right</desc>
    <binding>
        <command type="string">property-assign</command>
        <property type="string">/controls/engines/engine[1]/ignition-sw</property>
        <value type="bool">true</value>
    </binding>
    <mod-up>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/engines/engine[1]/ignition-sw</property>
            <value type="bool">false</value>
        </binding>
    </mod-up>
  </button>
  <button n="4">
    <desc>Starter Left / Taxi Lights</desc>
    <binding>
        <command type="string">property-assign</command>
        <property type="string">/controls/engines/engine[0]/starter</property>
        <value type="bool">true</value>
    </binding>
  </button>
  <button n="5">
    <desc>Starter Right / Landing Lights</desc>
    <binding>
        <command type="string">property-assign</command>
        <property type="string">/controls/engines/engine[1]/starter</property>
        <value type="bool">true</value>
    </binding>
  </button>
</PropertyList>

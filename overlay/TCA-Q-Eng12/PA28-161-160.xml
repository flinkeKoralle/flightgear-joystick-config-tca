<?xml version="1.0"?>

<PropertyList>
    <button n="2">
        <desc>Fuel Pump</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/fuel/switches/pump</property>
            <value type="bool">true</value>
        </binding>
        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property type="string">/controls/fuel/switches/pump</property>
                <value type="bool">false</value>
            </binding>
        </mod-up>
    </button>
    <button n="3">
        <desc>Carb Heat</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">controls/anti-ice/engine/carb-heat-cmd</property>
            <value type="bool">true</value>
        </binding>
        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property type="string">controls/anti-ice/engine/carb-heat-cmd</property>
                <value type="bool">false</value>
            </binding>
        </mod-up>
    </button>
    <button n="4">
        <desc>Recog Lights</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/switches/beacon</property>
        </binding>
    </button>
    <button n="5">
        <desc>Landing Lights</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/switches/landing-light</property>
        </binding>
    </button>
    <button n="6">
        <desc>Ignition Knob Left</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/switches/selected-tank</property>
            <value type="int">0</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/switches/selected-tank</property>
                <value type="int">1</value>
            </binding>
        </mod-up>
    </button>
    <button n="7">
        <desc>Ignition Knob Right</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/switches/selected-tank</property>
            <value type="int">2</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/switches/selected-tank</property>
                <value type="int">1</value>
            </binding>
        </mod-up>
    </button>
</PropertyList>

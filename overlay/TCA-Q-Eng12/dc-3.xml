<?xml version="1.0"?>

<PropertyList>
    <button n="2">
        <desc>Cutoff Switch Left</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[0]/magnetos</property>
            <value type="int">3</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine[0]/magnetos</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>
    <button n="3">
        <desc>Cutoff Switch Right</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[1]/magnetos</property>
            <value type="int">3</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine[1]/magnetos</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>
    
    <button n="4">
        <desc>Landing Lights Left</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/landing-lights[0]</property>
        </binding>
    </button>
    <button n="5">
        <desc>Landing Lights Right</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/landing-lights[1]</property>
        </binding>
    </button>
    <button n="6">
        <desc>Ignition Knob Left</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[0]/starter</property>
            <value type="bool">true</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine[0]/starter</property>
                <value type="bool">false</value>
            </binding>
        </mod-up>
    </button>
    <button n="7">
        <desc>Ignition Knob Right</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[1]/starter</property>
            <value type="bool">true</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine[1]/starter</property>
                <value type="bool">false</value>
            </binding>
        </mod-up>
    </button>
</PropertyList>

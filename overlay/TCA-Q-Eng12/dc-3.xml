<?xml version="1.0"?>

<PropertyList>
    <button n="0">
        <desc>Go-around</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/autoflight/autopilot[0]/engage</property>
            <value type="bool">true</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/autoflight/toga</property>
            <value type="int">1</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/autoflight/toga</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>
    <button n="2">
        <desc>Cutoff Switch Left</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/tank[0]/boost-pump</property>
            <value type="int">3</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/tank[0]/boost-pump</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>
    <button n="3">
        <desc>Cutoff Switch Right</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/tank[1]/boost-pump</property>
            <value type="int">3</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/tank[1]/boost-pump</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>
    
    <button n="4">
        <desc>Landing Lights Left</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/landing-lights[0]</property>
        </binding>
    </button>
    <button n="5">
        <desc>Landing Lights Right</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/landing-lights[1]</property>
        </binding>
    </button>

    <button n="6">
        <desc>Ignition Knob Left (Tank Selector)</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/left-valve</property>
            <value type="int">0</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/right-valve</property>
            <value type="int">0</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/left-valve</property>
                <value type="int">3</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/right-valve</property>
                <value type="int">2</value>
            </binding>
        </mod-up>
    </button>
    <button n="7">
        <desc>Ignition Knob Right (Tank Selector)</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/left-valve</property>
            <value type="int">4</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/right-valve</property>
            <value type="int">1</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/left-valve</property>
                <value type="int">3</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/right-valve</property>
                <value type="int">2</value>
            </binding>
        </mod-up>
    </button>
</PropertyList>

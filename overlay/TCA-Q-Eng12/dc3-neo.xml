<?xml version="1.0"?>

<PropertyList>
    <button n="6">
        <desc>Fuel Selector Left</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/left-valve-sel</property>
            <value type="int">0</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/right-valve-sel</property>
            <value type="int">0</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/left-valve-sel</property>
                <value type="int">-1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/right-valve-sel</property>
                <value type="int">1</value>
            </binding>
        </mod-up>
    </button>
    <button n="7">
        <desc>Fuel Selector Right</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/left-valve-sel</property>
            <value type="int">-2</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/fuel/right-valve-sel</property>
            <value type="int">2</value>
        </binding>
        
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/left-valve-sel</property>
                <value type="int">-1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/fuel/right-valve-sel</property>
                <value type="int">1</value>
            </binding>
        </mod-up>
    </button>

    <button n="4">
        <desc>Landing Lights Left</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/landing-lights[0]</property>
        </binding>
    </button>
    <button n="5">
        <desc>Landing Lights Right</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/landing-lights[1]</property>
        </binding>
    </button>
    
    <button n="2">
        <desc>Magnetos Left</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[0]/magnetos</property>
            <value type="int">3</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine[0]/magnetos</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>
    <button n="3">
        <desc>Magnetos Right</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/engines/engine[1]/magnetos</property>
            <value type="int">3</value>
        </binding>
        <mod-up>
            <binding>
                <command>property-assign</command>
                <property>controls/engines/engine[1]/magnetos</property>
                <value type="int">0</value>
            </binding>
        </mod-up>
    </button>

</PropertyList>
